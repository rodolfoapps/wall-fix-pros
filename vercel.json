{
  "functions": {
    "app/**/*.tsx": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "wallfixpros.com"
        }
      ],
      "destination": "https://www.wallfixpros.com/$1",
      "permanent": true
    },
    {
      "source": "/drywall-repair",
      "destination": "/services/drywall-repair",
      "permanent": true
    },
    {
      "source": "/drywall-installation", 
      "destination": "/services/drywall-installation",
      "permanent": true
    }
  ]
}